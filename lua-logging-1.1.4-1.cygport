inherit lua

DESCRIPTION="Lua logging library"
HOMEPAGE="http://www.keplerproject.org/lualogging/"
SRC_URI="http://luaforge.net/frs/download.php/2693/${PN/-}-${PV}.tar.gz"
SRC_DIR="${PN/-}-${PV}"

DIFF_EXCLUDES="test*.log"

src_compile() { :; }

src_install() {
	cd ${S}
	cyginstall PREFIX=${D}/usr

	for lang in br us
	do
		docinto html/${lang}
		dodoc doc/${lang}/*
	done
}

HTMLDOCS="*.html *.png"
